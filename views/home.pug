block content
  div(class="container mt-6 bg-darkBg p-6 rounded-lg shadow-lg w-96 border border-accent")
    form(
      hx-post="/"
      hx-target="#content"
      hx-swap="innerHTML"
      autocomplete="off"
    )
      div(class="mb-4")
        label(for="long-url" class="block text-lg mb-2 flex items-center")
          i(class="fas fa-link mr-2")
          | shorten a long URL
        input(
          id="long-url"
          name="url"
          type="text"
          placeholder="enter a long URL here"
          class="w-full p-3 bg-gray-700 border border-gray-600 text-white rounded-md"
          oninput="toggleButton()"
        )

      div(class="mb-4")
        button(
          type="submit"
          id="submit-button"
          class="w-full p-3 bg-accent text-darkBg rounded-md hover:bg-lightText disabled:bg-gray-500 disabled:cursor-not-allowed"
          disabled
        ) shorten !
